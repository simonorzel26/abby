{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "build:prod": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**"
      ]
    },
    "test": {
      "outputs": [
        "coverage/**"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    }
  },
  "globalEnv": [
    "VERCEL_URL",
    "PORT",
    "NODE_ENV",
    "VERCEL",
    "VERCEL_ENV",
    "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY",
    "ANALYZE",
    "SKIP_ENV_VALIDATION"
  ]
}
